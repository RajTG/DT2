<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.deltatask2.MainActivity">

    <ListView
        android:id="@+id/lisView"
        android:layout_width="368dp"
        android:layout_height="323dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="180dp"
        android:cacheColorHint="#009900"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:id="@+id/fromCamera"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:onClick="onClick"
        android:text="Take Photo"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="78dp"
        android:layout_alignBaseline="@+id/fromGallery"
        android:layout_alignBottom="@+id/fromGallery"
        android:layout_alignStart="@+id/lisView"
        android:layout_marginStart="21dp" />

    <Button
        android:id="@+id/fromGallery"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Gallery"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="78dp"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/lisView"
        android:layout_toEndOf="@+id/fromCamera"
        android:layout_marginStart="23dp" />
</RelativeLayout>
